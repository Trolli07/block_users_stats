{{!
    @template block_users_stats/stats-item

    Template to display an item in the users statistics block content.

    Example context (json):
    {
        "title": "Total users",
        "count": 45,
    }
}}

<div class="d-flex justify-content-between align-items-center p-3 bg-light rounded mb-2">
    <span class="small fw-bold item">{{ title }}</span>
    <span class="h5 text-primary mb-0">{{ count }}</span>
</div>


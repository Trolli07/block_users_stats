    {
        "users_title": "Title for users",
        "enrolments_title": "Title for enrolments",
    }
}}

<div class="block-users-stats">
    <h4 class="h6">{{ users_title }}</h4>
    <div class="d-flex flex-column gap-3 mb-3" id="block-users-stats-users-items">

